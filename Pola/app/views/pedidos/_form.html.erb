<%= form_for @pedido, :html => { :class => "form-horizontal pedido" } do |f| %>

  <% if @pedido.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pedido.errors.count, "error") %> prohibited this pedido from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pedido.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :estimado, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :estimado, :class => 'form-control' %>
    </div>
    <%=f.error_span(:estimado) %>
  </div>
  <div class="form-group align-left">
    <%= f.label :prioridad, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :prioridad, ['Baja', 'Media','Alta']%>
    </div>
    <%=f.error_span(:prioridad) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
       <div class="field">
        <%= f.select :status, ['Design', 'Preview','Laminado','Revision','Prensa','Embalaje','Enviado','Entregado']%>
       </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :cantidad, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cantidad, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cantidad) %>
  </div>
  <div class="form-group">
    <%= f.label :fecha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :fecha, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fecha) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pedidos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
