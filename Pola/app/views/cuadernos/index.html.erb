<%- model_class = Cuaderno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tiempo) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:beneficio) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cuadernos.each do |cuaderno| %>
      <tr>
        <td><%= link_to cuaderno.id, cuaderno_path(cuaderno) %></td>
        <td><%= cuaderno.tiempo %></td>
        <td><%= cuaderno.tipo %></td>
        <td><%= cuaderno.beneficio %></td>
        <td><%=l cuaderno.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      cuaderno_path(cuaderno), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cuaderno_path(cuaderno), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cuaderno_path(cuaderno),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cuaderno_path,
            :class => 'btn btn-primary' %>
