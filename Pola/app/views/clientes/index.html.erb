<p id="notice"><%= notice %></p>

<h1>Clientes en la base de datos</h1>
<table class="table table-striped">
  <thead >
    <tr>
      <th class="padding-index">Nombre</th>
      <th class="padding-index">Direccion</th>
      <th class="padding-index">¿Es persona física?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class = "padding-index">
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.personafisica %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

